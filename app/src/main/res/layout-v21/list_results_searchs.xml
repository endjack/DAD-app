<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    android:id="@+id/layoutResults"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:layout_marginBottom="5dp"
    >

    <LinearLayout
        android:id="@+id/linearInterno"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <ImageView
            android:layout_width="0dp"
            android:layout_height="62dp"
            android:layout_marginLeft="5dp"
            android:layout_weight="0.7"
            android:alpha="0.9"
            android:src="@drawable/teacher2" />

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="3"
            android:orientation="vertical"
            android:paddingLeft="5dp">

            <TextView
                android:id="@+id/tvResultadoNome"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Nome Professor"
                android:textColor="@android:color/black"
                android:textSize="22dp" />

            <TextView
                android:id="@+id/tvResultadoSetor"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Setor IMD"
                android:textSize="18dp" />


        </LinearLayout>

        <RelativeLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="0.7">

            <ImageView
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_centerInParent="true"
                android:src="@drawable/seta_more"
                android:alpha="0.7"/>

        </RelativeLayout>

    </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="2dp"
            android:background="@color/colorPrimary"
            android:layout_marginRight="15dp"
            android:layout_marginLeft="15dp"
            android:alpha="0.4"
            />
    
</LinearLayout>