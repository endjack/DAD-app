<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_pressed="true" >
        <shape android:shape="rectangle"  >
            <corners android:radius="3dip" />
            <stroke android:width="1dip" android:color="#9584b4" />
            <gradient android:angle="-90" android:startColor="#5f42a4"
                android:endColor="#7f689a"  />
        </shape>
    </item>
    <item android:state_focused="true">
        <shape android:shape="rectangle"  >
            <corners android:radius="3dip" />
            <stroke android:width="1dip" android:color="#9584b4" />
            <solid android:color="#9584b4"/>
        </shape>
    </item>
    <item >
        <shape android:shape="rectangle"  >
            <corners android:radius="3dip" />
            <stroke android:width="1dip" android:color="#9584b4" />
            <gradient android:angle="-90" android:startColor="#aa97cc"
                android:endColor="#7f689a" />
        </shape>
    </item>
</selector>